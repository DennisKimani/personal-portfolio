<div class="images center">
  <p style="font-size: 20px;">Please <%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %> to view projects and  please leave a comment.</p>
  <%= image_tag "coder.jpg" %>
</div>

<ul>
  <% @contents.each do |content| %>
  <h3>
    <li><%= link_to content.title, content_path(content) %></li>
  </h3>
  <p>
    <%= content.description %>
  </p>
  <% end %>
</ul>

<%= link_to "New content", new_content_path %>
