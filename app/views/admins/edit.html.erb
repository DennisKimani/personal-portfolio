<h2>Edit the category.</h2>

<% if @admin.errors.any? %>
<h3>An error was encountered. Please retry again.</h3>
<ul>
  <% @admin.errors.full_message.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<% form_for @admin do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title %>
 <%= f.label :description %>
 <%= f.text_field :description %>
 <%= f.submit %>
 <% end %>
